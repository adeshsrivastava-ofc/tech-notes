# Notion → GitHub Sync Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file!

# =============================================================================
# NOTION CONFIGURATION (Required)
# =============================================================================

# Notion Integration Token
# Create at: https://www.notion.so/my-integrations
# Required permissions: Read content
NOTION_TOKEN=ntn_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Parent page ID containing your Tech Notes
# Find it: Open the page in Notion → Share → Copy link → extract the ID
NOTION_PARENT_PAGE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# GITHUB CONFIGURATION (Required for push)
# =============================================================================

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo
GITHUB_TOKEN=github_pat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# GIT CONFIGURATION (Required)
# =============================================================================

# Git user for commits - must be set
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# =============================================================================
# SYNC CONFIGURATION (Optional)
# =============================================================================

# Enable debug logging (true/false)
DEBUG=false

# Dry run mode - no git commits (true/false)
DRY_RUN=false

# Force sync all pages regardless of change detection (true/false)
FORCE_SYNC=false
